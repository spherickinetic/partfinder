{% extends 'base.html.twig' %}

{% block title %}PartFinder - Find{% endblock %}

{% block body %}

    <div class="actions position-fixed top-0 end-0 p-2 d-flex">
        <a class="btn btn-primary" href="{{ path(newPath) }}">Create</a>
    </div>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped table-hover table-sm border">
        <thead class="table-dark">
            <tr>
            {% if item.partNumber is defined %}
                <th>Part Number</th>
            {%endif%}
            {% if item.vendorName is defined %}
                <th>Vendor Name</th>
            {%endif%}
            {% if item.part is defined %}
                <th>Part Number</th>
            {%endif%}
            {% if item.vendor is defined %}
                <th>Vendor Name</th>
            {%endif%}
            {% if item.vendorPartNumber is defined %}
                <th>Vendor Part Number</th>
            {%endif%}
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
            {% if item.partNumber is defined %}
                <td>
                    <a href="{{ path(showPath, {'id': item.id}) }}">
                        {{ item.partNumber }}
                    </a>
                </td>
            {%endif%}
            {% if item.vendorName is defined %}
                <td>
                    <a href="{{ path(showPath, {'id': item.id}) }}">
                        {{ item.vendorName }}
                    </a>
                </td>
            {%endif%}
            {% if item.part is defined %}
                <td>
                    {{ item.part.partNumber }}
                </td>
            {%endif%}
            {% if item.vendor is defined %}
                <td>
                    {{ item.vendor.vendorName }}
                </td>
            {%endif%}
            {% if item.vendorPartNumber is defined %}
                <td>
                    <a href="{{ path('app_vendor_part_show', {'id': item.id}) }}">
                        {{ item.vendorPartNumber }}
                    </a>
                </td>
            {%endif%}
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
